{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Virtual Environment",
            "type": "shell",
            "command": "python",
            "args": ["-m", "venv", ".venv"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": ".venv/bin/pip",
            "args": ["install", "-r", "inference/requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "dependsOn": "Setup Virtual Environment"
        },
        {
            "label": "Start FastAPI Server",
            "type": "shell",
            "command": ".venv/bin/uvicorn",
            "args": [
                "inference.app:app",
                "--host", "0.0.0.0",
                "--port", "7860",
                "--reload"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "isBackground": true,
            "dependsOn": "Install Dependencies"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": ".venv/bin/python",
            "args": ["-m", "pytest", "tests/", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": ".venv/bin/black",
            "args": ["inference/", "scripts/"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup Complete Project",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Setup Virtual Environment",
                "Install Dependencies"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}